
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isTeamMember(project) {
      return request.auth.uid in project.data.team;
    }

    // --- Projects Collection ---
    match /projects/{projectId} {
      allow read: if resource.data.status == 'published' || isTeamMember(resource);
      allow create: if isSignedIn();
      allow update: if isTeamMember(resource);
      allow delete: if false; // Deletes are disabled for now
    }

    // --- Users Collection ---
    match /users/{userId} {
      // Any signed-in user can read a user's profile.
      allow read: if isSignedIn();
      // A user can only write to their own document.
      allow write: if isOwner(userId);
    }

    // --- Tags Collection ---
    match /tags/{tagId} {
      // Any signed-in user can read tags.
      allow read: if isSignedIn();
      // For now, allow any signed-in user to create/update tags.
      allow write: if isSignedIn();
    }

    // --- Learning Paths Collection ---
    match /learningPaths/{pathId} {
        // Content collections are readable by any signed-in user.
        allow read: if isSignedIn();
        // Writes are likely handled by an admin process, not clients.
        allow write: if false;
    }

    // --- User Progress Collection ---
    match /userLearningProgress/{progressId} {
        // Users can only read and write to their own progress documents.
        allow read, write: if request.auth.uid == resource.data.userId;
    }
  }
}
