datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id              String         @id @default(cuid())
  name            String?
  username        String?        @unique
  email           String?        @unique
  emailVerified   DateTime?
  image           String? // Deprecated in favor of avatarUrl
  avatarUrl       String?
  bio             String?
  location        String?
  website         String?
  interests       String[]
  createdAt       DateTime       @default(now())

  accounts      Account[]
  sessions      Session[]
  ownedProjects Project[]      @relation("ProjectOwner")
  memberships   ProjectMember[]
  tasks         Task[]
  discussions   Discussion[]
  learningPaths LearningPath[]

  actorEvents   Event[]        @relation("ActorEvents")
  targetEvents  Event[]        @relation("TargetEvents")
  notifications Notification[]

  steemSync   SteemSync? @relation(fields: [steemSyncId], references: [id])
  steemSyncId String?    @unique
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Project {
  id               String        @id @default(cuid())
  name             String
  tagline          String?
  description      String
  repoUrl          String?
  photoUrl         String?
  isDraft          Boolean       @default(true)
  isExpertReviewed Boolean       @default(false)
  progress         Int           @default(0)
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt

  owner            User          @relation("ProjectOwner", fields: [ownerId], references: [id])
  ownerId          String
  members          ProjectMember[]
  tasks            Task[]
  discussions      Discussion[]
  projectPathLinks ProjectPathLink[]
  tags             ProjectTag[]
  events           Event[]
}

model ProjectMember {
  id        String   @id @default(cuid())
  role      String // "lead", "contributor", "participant"
  createdAt DateTime @default(now())

  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId String

  @@unique([userId, projectId])
}

model Tag {
  id          String       @id @default(cuid())
  display     String       @unique
  isCategory  Boolean      @default(false)
  projects    ProjectTag[]
}

model ProjectTag {
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId String
  tag       Tag     @relation(fields: [tagId], references: [id], onDelete: Cascade)
  tagId     String

  @@id([projectId, tagId])
}

model Task {
  id          String   @id @default(cuid())
  title       String
  description String?
  status      String
  isMilestone Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  project    Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId  String
  assignee   User?   @relation(fields: [assigneeId], references: [id])
  assigneeId String?
}

model Discussion {
  id        String   @id @default(cuid())
  content   String
  createdAt DateTime @default(now())

  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId String
  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String

  parentId String?
  parent   Discussion?  @relation("DiscussionReplies", fields: [parentId], references: [id], onDelete: Cascade)
  replies  Discussion[] @relation("DiscussionReplies")
}

model LearningPath {
  id          String @id @default(cuid())
  title       String
  description String

  createdBy    User              @relation(fields: [createdById], references: [id])
  createdById  String
  projects     ProjectPathLink[]
}

model ProjectPathLink {
  id             String       @id @default(cuid())
  order          Int
  project        Project      @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId      String
  learningPath   LearningPath @relation(fields: [learningPathId], references: [id], onDelete: Cascade)
  learningPathId String
}

enum EventType {
  TAG_CREATED
  PROJECT_CREATED
  PROJECT_DRAFTED
  PROJECT_PUBLISHED
  PROJECT_DRAFT_UPDATED
  LEARNING_PATH_STARTED
  LEARNING_PATH_PROGRESS
  LEARNING_PATH_COMPLETED
  LEARNING_PATH_CONNECTED_TO_PROJECT
  PROFILE_UPDATED
  SETTINGS_UPDATED
  PROJECT_JOINED
  PROJECT_LEFT
  MEMBER_ROLE_APPLIED
  MEMBER_ROLE_APPROVED
  USER_INVITED_TO_PROJECT
  DISCUSSION_COMMENT_POSTED
  DISCUSSION_COMMENT_REPLIED
  TASK_CREATED
  TASK_UPDATED
  TASK_DELETED
  PROJECT_DETAILS_UPDATED
  PROJECT_PHOTO_UPDATED
  PROJECT_VISIBILITY_UPDATED
}

model Event {
  id           String    @id @default(cuid())
  type         EventType
  payload      Json?
  createdAt    DateTime  @default(now())

  actor        User      @relation("ActorEvents", fields: [actorUserId], references: [id], onDelete: Cascade)
  actorUserId  String
  targetUser   User?     @relation("TargetEvents", fields: [targetUserId], references: [id], onDelete: Cascade)
  targetUserId String?
  project      Project?  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId    String?

  notifications Notification[]

  @@index([actorUserId])
  @@index([targetUserId])
  @@index([projectId])
}

model Notification {
  id        String   @id @default(cuid())
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())

  user    User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId  String
  event   Event @relation(fields: [eventId], references: [id], onDelete: Cascade)
  eventId String

  @@unique([userId, eventId])
  @@index([userId])
}

model SteemSync {
  id        String      @id @default(cuid())
  lastSync  DateTime
  user      User?
  posts     SteemPost[]
}

model SteemPost {
  id                   Int      @id
  author               String
  permlink             String
  title                String
  body                 String
  created              DateTime
  net_votes            Int
  children             Int
  curator_payout_value String
  pending_payout_value String
  url                  String

  sync        SteemSync @relation(fields: [steemSyncId], references: [id])
  steemSyncId String

  @@unique([author, permlink])
}
